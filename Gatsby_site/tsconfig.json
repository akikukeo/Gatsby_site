{
    "compilerOptions": {
        "jsx": "react",
        "target": "ES2020",
        "allowJs": true,
        "module": "commonjs",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": false,
        "sourceMap": true,
    },
    "include": [
        "src/**/*"
, "prettier.config.js"    ],

    "exclude": [
        "node_modules",
        "./Gatsby_site/node_modules",
        "dist",
        "**/node_modules",
        "**/dist",
        "**/build",
        "**/*.min.js",
        "**/coverage",
        "build"
    ]
}
